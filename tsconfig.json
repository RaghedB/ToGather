{
  "compilerOptions": {
    /* ✅ Core settings */
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,

    /* ✅ Next.js plugin (keep this) */
    "plugins": [
      {
        "name": "next"
      }
    ],

    /* ✅ Correct alias config */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  /* ✅ Included files */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
